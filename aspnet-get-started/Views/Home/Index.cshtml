@{
    ViewBag.Title = "Awesome CICD Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s;
        }
        footer {
            background-color: #f8f9fa;
            padding: 20px;
            text-align: center;
        }
    </style>
</head>
<body>

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to My Awesome CICD Page!</h1>
    <p class="lead">Developed by Miguel during Az-204 Training</p>
    <p>
        <a href="http://asp.net" class="btn btn-primary btn-lg">Learn More &raquo;</a>
    </p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">GitHub</h5>
                    <p class="card-text">Explore the power of GitHub in managing your codebase and CI/CD pipelines.</p>
                    <a href="http://go.microsoft.com/fwlink/?LinkId=301865" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">My Libraries</h5>
                    <p class="card-text">Use NuGet to easily manage libraries in your ASP.NET projects.</p>
                    <a href="http://go.microsoft.com/fwlink/?LinkId=301866" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Host Your Web</h5>
                    <p class="card-text">Find the perfect web hosting service for your applications.</p>
                    <a href="http://go.microsoft.com/fwlink/?LinkId=301867" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<footer>
    <p>&copy; 2024 Miguel's Awesome CICD Page</p>
</footer>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
